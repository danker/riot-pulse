# Riot Pulse Configuration File
# Copy this file to config.yaml and customize as needed

# LLM Provider Configuration
llm:
  # Active provider - can be: perplexity, openai, anthropic, xai
  provider: perplexity
  
  # Provider-specific configurations
  perplexity:
    model: sonar-pro  # Options: sonar, sonar-pro, sonar-reasoning
    # API key should be set via PERPLEXITY_API_KEY environment variable
    
  openai:
    model: gpt-4-turbo-preview  # Options: gpt-4, gpt-4-turbo-preview, gpt-3.5-turbo
    # API key should be set via OPENAI_API_KEY environment variable
    
  anthropic:
    model: claude-3-opus-20240229  # Options: claude-3-opus-20240229, claude-3-sonnet-20240229
    # API key should be set via ANTHROPIC_API_KEY environment variable
    
  xai:
    model: grok-1  # Options: grok-1
    # API key should be set via XAI_API_KEY environment variable

